<% title @room.name %>

<% @room.units.each do |unit| %>
  <div class="unit field">
    <%= render :partial => unit %>
  </div>
<% end %>
<div class="actions">
  <% if can?(:manage, @room) %>
    <%= link_to 'Add unit', new_unit_path(:room_id => @room) %>
    <%= link_to 'Edit', edit_room_path(@room) %>
  <% end %>
  <%= link_to 'Back', rooms_path %>
</div>
